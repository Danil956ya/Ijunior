using System;

public class Program
{
    static public void Main ()
    {
           string input = Console.ReadLine();
	   int depth = 0;
	   int score = 0;

	  for(int i = 0; i < input.Length; i++)
	  {
	   		if(input[i] == '(')
			   {
			   	depth++;	
			   }

			if(input[i] == ')')
			   {
			        depth--;
			   }

		depth = depth <= 0? score++: score;
	   }
	  Console.WriteLine("score is : " + score);
	 
    }
}
