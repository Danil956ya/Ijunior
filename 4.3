using System;

namespace _4._3
{
    class Program
    {
        static void Main(string[] args)
        {
            EnterNumber(Console.ReadLine());
        }

        static int EnterNumber(string value = "")
        {
            int tempInt;

            while(int.TryParse(value, out tempInt) == false)
            {
                Console.WriteLine("Конвертация не удалась, введите число!");
                value = Console.ReadLine();
            }

            Console.WriteLine("Верно!");
            return tempInt;
        }
    }
}
