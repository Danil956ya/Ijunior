using System;

namespace ConsoleApp4_9_3
{
    class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();
            string initialArray = "";
            string maxArray = "";
            int[] array = new int[30];

            for (int i = 0; i < array.Length; i++)
            {
                array[i] = random.Next(1, 9);
                Console.Write(array[i] + " ");
                initialArray += Convert.ToString(array[i] + " ");

                if ((i == array.Length - 1) && (array[0] > array[1]))
                {
                    maxArray += array[0] + " ";
                }

                if (i == array.Length - 1)
                {

                    for (int j = 1; j < array.Length - 1; j++)
                    {

                        if (array[j] > array[j + 1] && array[j] > array[j - 1])
                        {
                            maxArray += array[j] + " ";
                        }

                    }

                }

                if ((i == array.Length - 1) && (array[array.Length - 1] > array[array.Length - 2]))
                {
                    maxArray += "" + array[array.Length - 1];
                }

            }

            Console.WriteLine("\nЛокальные максимумы: {0}", maxArray);
        }
    }
}
