using System;

namespace _7
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Сколько людей перед вами?");
            int waitingTime = 10;
            int peoples = Convert.ToInt32(Console.ReadLine()) * waitingTime;
            int minuteInHour = 60;
            int hours = peoples / minuteInHour;
            int minuts = peoples % minuteInHour;
            Console.WriteLine("Вам нужно прождать {0} часов и {1} минут.", hours, minuts);
        }
    }
}
